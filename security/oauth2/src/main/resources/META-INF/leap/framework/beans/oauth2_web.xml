<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.leapframework.org/schema/beans" default-lazy-init="true">

    <bean type="leap.oauth2.wa.OAuth2WebAppConfig"
          class="leap.oauth2.wa.DefaultOAuth2WebAppConfig" primary="true">
          
          <additional-type-def type="leap.oauth2.wa.OAuth2WebAppConfigurator" primary="true"/>
          
    </bean>          
    
    <bean type="leap.oauth2.wa.token.WebAccessTokenManager"
          class="leap.oauth2.wa.token.DefaultWebAccessTokenManager" primary="true"/>
    
    <bean type="leap.oauth2.wa.auth.WebResponseHandler"
          class="leap.oauth2.wa.auth.DefaultWebResponseHandler" primary="true"/>
          
    <bean name="jdbc"
          type="leap.oauth2.wa.token.WebAccessTokenStore"
          class="leap.oauth2.wa.token.JdbcWebAccessTokenStore"/>
          
    <bean type="leap.web.security.SecurityInterceptor" class="leap.oauth2.wa.OAuth2WebAppSecurityInterceptor"/>
</beans>