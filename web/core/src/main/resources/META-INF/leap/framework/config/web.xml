<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.leapframework.org/schema/config" xmlns:web="http://www.leapframework.org/schema/web/config">

    <web:mvc allow-format-extension="true"
             allow-action-extension="true"
             action-extensions="do"/>

    <web:errors>
        <web:error-view view-path="errors/400" error-code="400"/>
        <web:error-view view-path="errors/401" error-code="401"/>
        <web:error-view view-path="errors/403" error-code="403"/>
        <web:error-view view-path="errors/404" error-code="404"/>
        <web:error-view view-path="errors/500" error-code="500"/>
    </web:errors>
</config>